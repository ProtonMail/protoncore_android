<!-- TODO update to Android 6 min supported version to support new styles -->
<resources>

    <!-- region AppBar's -->
    <style name="ProtonAppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">@dimen/no_elevation</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="closeIcon">@drawable/ic_close</item>
    </style>

    <style name="ProtonToolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/Proton.Text.Default.Bold</item>
        <item name="titleTextColor">@color/text_norm_selector</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="closeIcon">@drawable/ic_close</item>
    </style>

    <style name="ProtonSearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="closeIcon">@drawable/ic_close</item>
    </style>
    <!-- endregion -->

    <!-- region TextAppearance's -->
    <style name="Proton.Text" parent="TextAppearance.AppCompat" />

    <style name="Proton.Text.Hero">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Proton.Text.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="Proton.Text.Headline.Hint">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="Proton.Text.Headline.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Proton.Text.Default">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Proton.Text.Default.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Proton.Text.Default.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Proton.Text.Default.Weak">
        <item name="android:textColor">@color/text_weak_selector</item>
    </style>

    <style name="Proton.Text.Default.Hint">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="Proton.Text.Default.Inverted">
        <item name="android:textColor">@color/text_inverted</item>
    </style>

    <style name="Proton.Text.DefaultSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Proton.Text.DefaultSmall.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Proton.Text.DefaultSmall.Weak">
        <item name="android:textColor">@color/text_weak_selector</item>
    </style>

    <style name="Proton.Text.DefaultSmall.Inverted">
        <item name="android:textColor">@color/text_inverted</item>
    </style>

    <style name="Proton.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Proton.Text.Caption.Strong">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Proton.Text.Caption.Weak">
        <item name="android:textColor">@color/text_weak_selector</item>
    </style>

    <style name="Proton.Text.Caption.Hint">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="Proton.Text.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_norm</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Proton.Text.Overline.Strong">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <!-- endregion -->

    <!-- region TextView's -->
    <style name="ProtonTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="ProtonTextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/default_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProtonTextView.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/default_subtitle_text_size</item>
        <item name="android:textColor">@color/text_weak_selector</item>
    </style>

    <style name="ProtonTextView.InputHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProtonTextView.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProtonTextView.Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProtonTextView.InputFooter">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- endregion -->

    <!-- region Text inputs -->
    <style name="ProtonEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="ProtonEditText.Border">
        <item name="android:background">@drawable/default_edit_text</item>
    </style>

    <style name="ProtonInput.TextInputLayout.Border" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="helperTextTextColor">?attr/brand_norm</item>
        <item name="boxBackgroundColor">?proton_background_secondary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/input_outlined_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="ProtonInput.TextInputLayout.Border.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="helperTextTextColor">?attr/brand_norm</item>
        <item name="boxBackgroundColor">?proton_background_secondary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/input_outlined_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
    <!-- endregion -->

    <!--  region Buttons -->
    <style name="ProtonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ProtonButtonTextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProtonButton.Borderless.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="progressDrawable">@drawable/ic_animated_loading_inverted</item>
    </style>

    <style name="ProtonButton.Borderless.Text.NoProgress">
        <item name="progressDrawable">@null</item>
    </style>

    <style name="ProtonButton.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="progressDrawable">@drawable/ic_animated_loading_inverted</item>
        <item name="strokeColor">@color/btn_stroke_color_selector</item>
    </style>

    <style name="ProtonButton.OutlinedButton.Toggle">
        <item name="progressDrawable">@null</item>
        <item name="backgroundTint">@color/btn_background_checkable_selector</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ProtonButton.Secondary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/Proton.Text.Caption</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="backgroundTint">@color/interaction_weak_selector</item>
        <item name="progressDrawable">@drawable/ic_animated_loading_secondary</item>
    </style>

    <style name="ProtonButton.Navigation" parent="ProtonButton">
        <item name="android:layout_width">@dimen/button_nav_size</item>
        <item name="android:layout_height">@dimen/button_nav_size</item>
        <item name="backgroundTint">@color/interaction_weak</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/icon_norm</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">40dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="rippleColor">?attr/brand_norm</item>
    </style>

    <style name="ProtonButton.Navigation.Borderless" parent="ProtonButton.Navigation">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <!-- endregion -->

    <!-- region Snackbar -->
    <style name="ProtonSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ProtonSnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall.Medium</item>
        <item name="android:textColor">@color/text_inverted</item>
    </style>

    <style name="ProtonSnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
        <item name="android:textColor">@color/text_inverted</item>
    </style>
    <!-- endregion -->

    <!-- region Switches, Checkboxes and Radio buttons -->
    <style name="ProtonSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textAppearance">@style/Proton.Text.Default</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
    </style>

    <style name="ProtonCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/Proton.Text.Default</item>
        <item name="android:buttonTint">@color/check_box_selector</item>
    </style>

    <style name="ProtonRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/Proton.Text.Default</item>
        <item name="tint">@color/radio_button_selector</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ProtonSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:padding">@dimen/gap_small</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ProtonSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <!-- endregion -->

    <!-- region Dialog -->
    <style name="ProtonDialog.Picker" parent="ProtonTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_norm</item>
    </style>

    <style name="ProtonImage.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
    </style>
    <!-- endregion -->

    <!-- region NavigationView's -->
    <!-- This style is always dark regardless of day/night -->
    <style name="ProtonNavigationView.Dark" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/nav_view_background</item>
        <item name="android:listDivider">@color/nav_view_divider</item>
        <item name="android:textColorSecondary">@color/nav_view_section_header_text</item>
        <item name="itemTextAppearance">@style/ProtonNavigationViewItemTextAppearance</item>
        <item name="itemTextColor">@color/nav_view_item_text</item>
        <item name="itemIconTint">@color/nav_view_item_icon</item>
        <item name="itemIconPadding">12dp</item>
        <item name="itemBackground">@drawable/nav_view_item_background</item>
        <item name="itemHorizontalPadding">@dimen/default_gap</item>
    </style>

    <style name="ProtonNavigationViewItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/default_subtitle_text_size</item>
    </style>
    <!-- endregion -->

    <!-- region TabLayout -->
    <style name="ProtonTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Proton.Text.DefaultSmall.Medium</item>
        <item name="tabIconTint">@color/text_selectable_selector</item>
        <item name="tabIndicatorColor">?attr/proton_interaction_strong</item>
        <item name="tabTextColor">@color/text_selectable_selector</item>
    </style>
    <!-- endregion -->

    <!-- region Progress indicator -->
    <style name="ProtonLinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:background">?attr/proton_background_norm</item>
        <item name="trackThickness">2dp</item>
        <item name="trackColor">@color/linear_progress_track_color</item>
        <item name="indicatorColor">?attr/brand_norm</item>
    </style>
    <!-- endregion -->

</resources>

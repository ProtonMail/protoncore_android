        <shape android:shape="rectangle">
            <solid android:color="@color/nav_view_divider"/>
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/nav_view_background"/>
        </shape>
    </item>

</layer-list>

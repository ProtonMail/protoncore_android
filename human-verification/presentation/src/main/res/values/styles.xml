<resources>

    <style name="HumanVerificationTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/layout_dark</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/HumanVerificationTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_default</item>
        <item name="tabBackground">@drawable/background_tab_item</item>
    </style>

    <!-- for text -->
    <style name="HumanVerificationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/humanVerificationTabItemText</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
